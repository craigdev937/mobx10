{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react",
        "outDir": "./dist/",
        "module": "esnext",
        "target": "es6",
        "lib": ["dom", "es2020"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}


